<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post.title, post %></br>
            <small class="pull-right"><%= post.created_at.to_s(:long) %></small>
          </td>
          <td>
              <%= link_to 'Edit', edit_post_path(post), :class => "btn btn-primary" %>
              <%= link_to "Manage Comments", post_comments_path(post), :class => "btn btn-default" %>
              <%= link_to "delete", post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Post', new_post_path, :class => "btn btn-success" %>

<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Comment text</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td>
          <% if !comment.user.nil? && comment.user.id == current_user.id %>
            <%= link_to 'Edit', edit_comment_path(comment), :class => "btn btn-default" %>
          <% else %>

          <% end %>
          <%= truncate(comment.body, length: 60) %>
        </td>
        <td>
          <%= link_to 'Destroy', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
